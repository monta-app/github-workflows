# ArgoCD Test Configuration
# Copy this file to .env and fill in your actual values

# Required: ArgoCD server URL (without https://)
ARGOCD_SERVER=argocd.example.com

# Required: ArgoCD authentication token
# Generate with: argocd account generate-token
ARGOCD_AUTH_TOKEN=your-token-here

# Optional: Default ArgoCD namespace
ARGOCD_NAMESPACE=argocd

# Optional: Default timeout in seconds
ARGOCD_TIMEOUT=300

# Example usage for specific tests (override with command line args):
# ARGOCD_APP_NAME=geo-production
# ARGOCD_REVISION=d21aeca430231525cf69131c820db8d7ce6a9449
